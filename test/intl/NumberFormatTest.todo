package intl;

import intl.NumberFormat.NumberStyle;
using intl.NumberFormat.NumberFormatTools;

/** Tests the features of the `NumberFormat` class. **/
@:asserts final class NumberFormatTest {

	/** Creates a new test. **/
	public function new() {}

	/** Tests the `format()` method. **/
	@:variant(123, {dateStyle: intl.NumberFormat.NumberStyle.Currency}, "123â‚¬")
	@:variant(456.789, {dateStyle: intl.NumberFormat.NumberStyle.Decimal}, "456,789")
	@:variant(0.55, {dateStyle: intl.NumberFormat.NumberStyle.Percent}, "0,55%")
	public function testFormat(input: Float, style: NumberStyle, output: String) {
		asserts.assert(new NumberFormat("fr-FR", style, "EUR").format(input) == output);
		asserts.assert(input.toLocaleString("fr-FR", style, "EUR") == output);
		return asserts.done();
	}
}
